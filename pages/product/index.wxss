.product-box{
  overflow: hidden;
  width: 100%;
  height: 100%;
  padding-top: 20rpx;
	background: #f6f6f6;

}
.product-list{
	position: relative;
	overflow: hidden;
	background: #fff;
	padding: 50rpx;
	margin-bottom: 20rpx;
	font-size: 30rpx;
}
.product-list view{
	float: left
}
.product-icon{
	position: absolute;
	left: 40rpx;
	top: 50%;
	transform: translateY(-50%);
	width: 60rpx;
	height: 60rpx;
}
.product-icon image{
	width: 60rpx;
	height: 60rpx;
}
.product-text{
	line-height: 60rpx;
	padding: 0 100rpx;
}
.product-arrow{
	position: absolute;
	right: 40rpx;
	top: 50%;
	transform: translateY(-50%);
	width: 40rpx;
	height: 40rpx;
}
.product-arrow image{
	width: 40rpx;
	height: 40rpx;
}